<style>
    .evento-card {
        background-color: #ffffff;
        border: 1px solid #dee2e6;
        border-radius: 15px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
        color: #2c3e50;
        transition: box-shadow 0.3s ease;
    }

        .evento-card:hover {
            box-shadow: 0 6px 25px rgba(44, 62, 80, 0.2);
        }

    .evento-title {
        color: #2c3e50;
        font-weight: 700;
    }

    .evento-subtext {
        color: #495057;
    }

    .evento-btn {
        background-color: #2c3e50;
        color: white;
        border: none;
        font-weight: 600;
        border-radius: 8px;
        padding: 6px 14px;
        transition: background-color 0.3s ease;
    }

        .evento-btn:hover {
            background-color: #34495e;
            color: white;
        }

    .evento-action-btn {
        margin-right: 0.5rem;
        margin-bottom: 0.4rem;
    }

    /* Botón rojo para borrar */
    .btn-danger {
        background-color: #c0392b;
        border: none;
        border-radius: 8px;
        font-weight: 600;
        padding: 6px 14px;
        transition: background-color 0.3s ease;
    }

        .btn-danger:hover {
            background-color: #992d22;
        }

    /* Footer transparente y sin borde */
    .card-footer {
        background-color: transparent;
        border: none;
    }
</style>

<div class="container py-5">

    @if (TempData["EXITO"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["EXITO"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ERROR"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ERROR"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row row-cols-1 row-cols-md-2 g-4">
        @foreach (var evento in Model.ListaEventos!)
        {
            <div class="col">
                <div class="card h-100 shadow-sm evento-card">
                    <div class="card-body">
                        <h5 class="card-title evento-title">@evento.EventoName</h5>
                        <p class="card-text evento-subtext">@evento.Description</p>

                        <p class="evento-subtext"><strong>Usuarios inscritos:</strong></p>
                        <ul class="evento-subtext ps-3">
                            @foreach (var eu in evento.EventosUsuarios)
                            {
                                <li>@eu.Usuario?.UserName</li>
                            }
                        </ul>
                    </div>
                    <div class="card-footer text-center">
                        <div class="d-flex justify-content-center flex-wrap">
                            <form asp-action="BorrarEvento" method="post" class="me-2 mb-2">
                                <input type="hidden" name="eventoId" value="@evento.EventoId" />
                                <button type="submit" class="btn btn-danger btn-sm evento-action-btn">Borrar</button>
                            </form>

                            <form asp-action="EditarEvento" method="get" class="mb-2">
                                <input type="hidden" name="eventoId" value="@evento.EventoId" />
                                <button type="submit" class="btn evento-btn btn-sm evento-action-btn">Editar</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="text-center mt-4">
        <a asp-action="AgregarEvento" class="btn evento-btn px-4 py-2">Agregar Evento</a>
    </div>
</div>
