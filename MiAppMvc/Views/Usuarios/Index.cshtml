@model MiAppMvc.ViewModel.EmpresaUsuario

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .welcome-container {
        max-width: 800px;
        margin: 2rem auto;
        padding: 2rem;
        background-color: rgba(255, 255, 255, 0.1);
        border-radius: 16px;
        border: 1px solid rgba(107, 121, 173, 0.3);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
        color: #6b79ad;
    }

    .welcome-header {
        font-size: 2rem;
        font-weight: bold;
        color: black;
        text-align: center;
        margin-bottom: 1.5rem;
    }

    .subtitle {
        font-size: 1.3rem;
        font-weight: 500;
        color: black;
        margin-bottom: 1.5rem;
        border-bottom: 1px solid rgba(107, 121, 173, 0.2);
        padding-bottom: 0.5rem;
    }

    .event-list {
        list-style: none;
        padding-left: 0;
    }

    .event-item {
        background-color: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(107, 121, 173, 0.2);
        border-radius: 12px;
        padding: 1.2rem;
        margin-bottom: 1rem;
        box-shadow: 0 4px 12px rgba(107, 121, 173, 0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .event-item:hover {
            transform: translateY(-4px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
        }

        .event-item strong {
            color: black;
            font-size: 1.3rem;
        }

        .event-item span {
            color: black;
            font-size: 1.05rem;
            display: block;
            margin-top: 0.3rem;
        }

        .event-item small {
            color: black;
            display: block;
            margin-top: 0.4rem;
        }

    .no-events {
        color: #999999;
        font-style: italic;
        text-align: center;
        margin-top: 2rem;
        font-size: 1.1rem;
    }
</style>

<div class="welcome-container">
    <h2 class="welcome-header">Bienvenido, @Model.NombreUsuario</h2>

    <h4 class="subtitle">Eventos en los que estás inscrito:</h4>

    @if (Model.ListaEventos != null && Model.ListaEventos.Any())
    {
        <ul class="event-list">
            @foreach (var evento in Model.ListaEventos)
            {
                <li class="event-item">
                    <strong>@evento.EventoName</strong>
                    <span>@evento.Description</span>
                    <small>Empresa: @evento.Empresa?.Nombre</small>
                </li>
            }
        </ul>
    }
    else
    {
        <p class="no-events">No estás inscrito en ningún evento.</p>
    }
</div>
