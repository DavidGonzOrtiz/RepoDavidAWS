@model MiAppMvc.ViewModel.ModificarPasswordViewModel

<style>
    .form-label {
        color: white;
        font-weight: 600;
    }

    .form-control {
        border: 1px solid rgba(107, 121, 173, 0.5);
        background-color: rgba(255, 255, 255, 0.1);
        color: white;
    }

        .form-control:focus {
            border-color: #5a6894;
            box-shadow: 0 0 5px rgba(90, 104, 148, 0.5);
            background-color: white;
            color: #3a3f66;
        }

    .btn-primary {
        background-color: #6b79ad;
        border: none;
    }

        .btn-primary:hover {
            background-color: #5a6894;
        }

    .text-danger {
        font-weight: 600;
    }

    .container-password {
        max-width: 600px;
        margin: 2rem auto;
        background-color: rgba(255, 255, 255, 0.1);
        padding: 2rem;
        border-radius: 8px;
        border: 1px solid rgba(107, 121, 173, 0.3);
        color: #6b79ad;
        box-shadow: 0 2px 10px rgba(107, 121, 173, 0.2);
    }

    .alert {
        max-width: 600px;
        margin: 20px auto;
    }
</style>

@if (TempData["EXITO"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["EXITO"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ERROR"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ERROR"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="container-password">
    <h2 class="text-center mb-4">Cambiar Contraseña</h2>

    <form asp-action="ModificarPassword" method="post">
        <div class="mb-3">
            <label asp-for="PasswordActual" class="form-label"></label>
            <input asp-for="PasswordActual" type="password" class="form-control" autocomplete="current-password" placeholder="Contraseña Actual" />
            <span asp-validation-for="PasswordActual" class="text-danger"></span>
        </div>

        <div class="mb-4">
            <label asp-for="PasswordNueva" class="form-label"></label>
            <input asp-for="PasswordNueva" type="password" class="form-control" autocomplete="new-password" placeholder="Nueva Contraseña" />
            <span asp-validation-for="PasswordNueva" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary w-100">Cambiar Contraseña</button>
    </form>
</div>
