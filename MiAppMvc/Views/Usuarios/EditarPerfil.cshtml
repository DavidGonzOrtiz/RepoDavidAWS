@model EditarPerfilViewModel

<style>
    .form-container {
        max-width: 600px;
        margin: 2rem auto;
        padding: 2rem;
        background-color: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(107, 121, 173, 0.3);
        border-radius: 16px;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
        color: black;
    }

    .form-title {
        font-weight: 700;
        color: black;
        margin-bottom: 2rem;
        text-align: center;
    }

    .form-group label {
        font-weight: 600;
        color: black;
    }

    .form-control {
        background-color: rgba(255, 255, 255, 0.5);
        border: 1px solid rgba(107, 121, 173, 0.5);
        color: black;
    }

        .form-control:focus {
            border-color: #6b79ad;
            background-color: rgba(255, 255, 255, 0.7);
            color: black;
            box-shadow: 0 0 0 0.2rem rgba(107, 121, 173, 0.25);
        }

    .text-danger {
        color: #ff4d4d;
    }

    .btn-primary,
    .btn-secondary {
        width: 100%;
        padding: 10px;
        font-weight: 600;
        border-radius: 8px;
        border: none;
    }

    .btn-primary {
        background-color: black;
        color: white;
    }

        .btn-primary:hover {
            background-color: dodgerblue;
        }

    .btn-secondary {
        background-color: white;
        border: 1px solid #6b79ad;
        color: black;
        margin-top: 10px;
    }

        .btn-secondary:hover {
            background-color: rgba(107, 121, 173, 0.15);
            color: dodgerblue;
        }

    .alert-success,
    .alert-danger {
        border-radius: 8px;
        font-weight: 500;
    }
</style>

<div class="form-container">
    <h2 class="form-title">Editar Perfil</h2>

    @if (TempData["EXITO"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["EXITO"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ERROR"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ERROR"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <form asp-action="EditarPerfil" method="post">
        <div class="form-group mb-3">
            <label asp-for="UserName"></label>
            <input asp-for="UserName" class="form-control" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>

        <div class="form-group mb-4">
            <label asp-for="SecondName"></label>
            <input asp-for="SecondName" class="form-control" />
            <span asp-validation-for="SecondName" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Guardar cambios</button>
    </form>

    <a asp-action="ModificarPassword" asp-controller="Usuarios" class="btn btn-secondary">
        Cambiar Contraseña
    </a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
